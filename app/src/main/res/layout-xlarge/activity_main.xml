<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="250dp" app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/bannerImg" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.455"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logoImg"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="180dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="DevBlog"
            android:layout_width="185dp"
            android:layout_height="45dp"
            android:id="@+id/titleTxt" android:textSize="32sp" app:layout_constraintStart_toEndOf="@+id/logoImg"
            android:layout_marginStart="50dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/bannerImg"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/cameraImg"
            app:layout_constraintStart_toEndOf="@+id/titleTxt" app:layout_constraintHorizontal_bias="0.69"
            app:layout_constraintEnd_toStartOf="@+id/favImg"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintTop_toTopOf="@+id/favImg"
            app:layout_constraintBottom_toBottomOf="@+id/favImg"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/favImg"
            app:layout_constraintStart_toEndOf="@+id/cameraImg" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/inboxImg" app:layout_constraintTop_toTopOf="@+id/inboxImg"
            app:layout_constraintBottom_toBottomOf="@+id/inboxImg" android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/inboxImg"
            app:layout_constraintStart_toEndOf="@+id/favImg" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/bannerImg"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView8" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/logoImg" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintDimensionRatio="w,9:16"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView9"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="@+id/imageView8" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintDimensionRatio="w,9:16"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView10" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView8"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="16dp" android:scaleType="centerCrop" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintDimensionRatio="w,9:16"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView11"
            android:scaleType="centerCrop" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView9"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.543" app:layout_constraintDimensionRatio="w,9:16"/>
    <Button
            android:text="Customise Dashboard"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/customiseBtn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView10"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="#C6512F" android:textColor="#FFFFFF"
            android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>